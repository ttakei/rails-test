<%= form_for(realestate) do |f| %>
  <% if realestate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(realestate.errors.count, "error") %> prohibited this realestate from being saved:</h2>

      <ul>
      <% realestate.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "物件名" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label "賃料" %>
    <%= f.number_field :rent %>円
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label "築年数" %>
    <%= f.number_field :age %>年
  </div>

  <div class="field">
    <%= f.label "備考" %>
    <%= f.text_area :remarks %>
  </div>
  
  <hr />

  <% (1..2).each do |i| %>
    <h2>最寄り駅<%= i %></h2>
    <div class="field">
      <%= f.label "路線名" %>
      <%= f.text_field :route1 %>
    </div>
  
    <div class="field">
      <%= f.label "駅名" %>
      <%= f.text_field :station1 %>
    </div>
  
    <div class="field">
      <%= f.label "徒歩分数" %>
      <%= f.number_field :distance_walk1 %>分
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit submit_label %>
  </div>
<% end %>
