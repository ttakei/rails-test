<p id="notice"><%= notice %></p>

<h1>物件一覧</h1>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @realestates.each do |realestate| %>
      <tr>
        <td><%= realestate.name %></td>
        <td><%= realestate.rent %></td>
        <td><%= realestate.address %></td>
        <td><%= realestate.age %></td>
        <td><%= realestate.remarks %></td>
        <td><%= link_to "詳細", realestate %></td>
        <td><%= link_to "編集", edit_realestate_path(realestate) %></td>
        <td><%= link_to "削除", realestate, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

